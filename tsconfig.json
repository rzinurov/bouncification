{
  "compilerOptions": {
    "outDir": "dist/client",
    "target": "es2016",
    "module": "es6",
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "client/*": ["./client/*"],
      "common/*": ["./common/*"],
      "server/*": ["./server/*"]
    },
    "typeRoots": ["node_modules/@types", "node_module/phaser/types"],
    "types": ["phaser"]
  },
  "include": ["src/client/**/*", "src/common/**/*", "**/*"]
}
