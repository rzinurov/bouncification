{
  "compilerOptions": {
    "outDir": "dist/server",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "baseUrl": "./src"
  },
  "include": ["src/common/**/*", "src/server/**/*", "src/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
